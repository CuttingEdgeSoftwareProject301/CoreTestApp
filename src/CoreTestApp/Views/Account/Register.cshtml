        <label class="col-md-2 control-label">Fundraising Activities</label>
        <div class="col-md-10">
            <div class="radio-inline">
                <label class="radio-inline"><input type="radio" name="optradio">Yes</label>
                <label class="radio-inline"><input type="radio" name="optradio">No</label>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Volunteering at juvenile events</label>
        <div class="col-md-10">
            <div class="radio-inline">
                <label class="radio-inline"><input type="radio" name="optradio">Yes</label>
                <label class="radio-inline"><input type="radio" name="optradio">No</label>
            </div>
